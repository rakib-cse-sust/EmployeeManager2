<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>   

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Employee Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @if (@Session["IsAuthenticated"].ToString() == "1")
            {
                @Html.Partial("_menuPartial")
            }
        </div>
    </nav>
    
    <div class="container-fluid">

        <div class="row">

            @if (@Session["IsAuthenticated"].ToString() != "1")
            {
                @RenderBody()
            }
            else
            {
                <div class="col-sm-3 col-md-2 sidebar" style="margin-top:30px;height:450px">
                    @Html.Partial("_sidebarPartial")
                </div>
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="margin-top:30px;">
                    @RenderBody()
                </div>
            }

        </div>

        @*<hr />*@

        <footer class="footer">
            <p style="text-align:right;margin:15px">&copy; @DateTime.Now.Year - All right reserved.</p>
        </footer>

    </div>

    <script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <link href="~/Content/jasny-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dashboard.css" rel="stylesheet" />
    <link href="~/Content/sticky-footer.css" rel="stylesheet" />
    <script src="~/Scripts/jasny-bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
